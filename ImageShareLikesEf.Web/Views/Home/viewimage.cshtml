@model ViewModel

<div class="row">
    <input type="hidden" id="image-id" value="@Model.Image.Id">
    <div class="col-md-10 col-md-offset-1 well">
        <h1>@Model.Image.Title</h1>
        <img src="/uploads/@Model.Image.Path" style="width: 900px;">
        <br>
        <br>
        @if (Model.AlreadyLiked)
        {
            <button disabled id="like-button" class="btn btn-primary btn-lg">LIKE</button>
        }
        else
        {
            <button id="like-button" class="btn btn-primary btn-lg">LIKE</button>
        }
        Current Likes: <span id="likes">@Model.Image.Likes</span>
    </div>
</div>

@section Scripts {
    <script src="/js/JavaScript.js"></script>
}